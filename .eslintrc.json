{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },

  "extends": [
    "next/core-web-vitals"
    // "prettier"
  ], // make sure prettier is last
  "plugins": ["@emotion"],
  "rules": {
    "@emotion/jsx-import": "error",
    "@emotion/no-vanilla": "error",
    "@emotion/import-from-emotion": "error",
    "@emotion/styled-import": "error",
    "@next/next/no-img-element": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
